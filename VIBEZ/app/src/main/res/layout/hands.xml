<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Rock wins against scissors."
        android:textColor="#123456"
        android:textSize="18sp"
        android:background="#CBEFA2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Scissors win against paper."
        android:textColor="#123456"
        android:textSize="18sp"
        android:background="#CBEFA2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Paper wins against rock."
        android:textColor="#123456"
        android:textSize="18sp"
        android:background="#CBEFA2"/>
    <ImageView
        android:id="@+id/iv_cpu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:background="#F6D3D7"/>
    <ImageView
        android:id="@+id/iv_me"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:background="#F6E6B5"/>

</LinearLayout>
