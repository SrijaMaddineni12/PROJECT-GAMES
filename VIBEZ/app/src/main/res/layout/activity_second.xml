<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SecondActivity"
    android:background="#D4F3F0">


    <TextView
        android:id="@+id/tv_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level: 1"
        android:textSize="35sp"
        android:textColor="#123456"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:text="0"
        android:textColor="#123455"
        />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="numberSigned"
        android:digits="1234567890"
        android:hint="what was the number"
        android:textColor="#123456"/>

    <Button
        android:id="@+id/b_confirm"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textColor="#123456"
        android:background="#EFD8D6"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Number will be displayed for two seconds."
        android:textSize="19sp"
        android:textColor="#5F74EC"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thing to do is, memorizing the displayed number."
        android:textSize="19sp"
        android:textColor="#5F74EC"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ater 2 seconds, type the memorizied number."
        android:textSize="19sp"
        android:textColor="#5F74EC"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If the number entered is correct, then the gamer will be eligible to next level."
        android:textSize="19sp"
        android:textColor="#5F74EC"/>




</LinearLayout>